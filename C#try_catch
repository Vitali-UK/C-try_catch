    int[] array = new int[5];
    try
    {
        for (int i = 0; i < 6; i++)
        {
            System.Console.WriteLine(array[i]);
        }
    }
    catch(System.IndexOutOfRangeException e)
    {
        System.Console.WriteLine ("Oops, we went past the last element in the array!");
    }
    finally //this block is optional
    {
        System.Console.WriteLine ("This is the finally block. You will see this statement regardless of whether there is an error or not.");
    }
